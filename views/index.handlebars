<h1>Kittens!</h1>

<h2>Kittens that have not been devoured!</h2>

<ul>
  {{#each kittens}}
    {{#unless devoured}}
      {{> kittens/kitten-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Kittens that have been devoured!</h2>

<ul>
  {{#each kittens}}
    {{#if devoured}}
      {{> kittens/kitten-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<li>
	{{name}}

	<button class="change-devoured" data-id="{{id}}" data-newdevour="{{devoured}}">
		{{#if devoured}}EAT ME{{else}}DON'T EAT ME{{/if}}
	</button>
</li>


<h2>Add a Kitten</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Kitten Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1"> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured<br>
  </div>

  <button type="submit">Add Kitten</button>
</form>
